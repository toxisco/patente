<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/background"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/nome"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="13dip"
android:textStyle="bold"
android:layout_marginLeft="30dip"
android:layout_marginTop="15dip"
android:textColor="#ff0000" />
<TextView
android:id="@+id/nomevar"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="15dip"
android:layout_marginLeft="30dip"
android:layout_marginTop="2dip"
android:textStyle="bold"
android:layout_below="@+id/nome"
android:textColor="#000" />


<TextView
android:id="@+id/punti"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentRight="true"
android:layout_marginTop="15dip"
android:layout_marginRight="30dip"
android:textStyle="bold"
android:textSize="13dip"
android:textColor="#ff0000" />
<TextView
android:id="@+id/puntivar"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/punti"
android:layout_alignParentRight="true"
android:layout_marginTop="5dip"
android:layout_marginRight="35dip"
android:textStyle="bold"
android:textSize="28dip"
android:textColor="#000" />


<TextView
android:id="@+id/nascita"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/puntivar"
android:layout_marginLeft="35dip"
android:layout_marginTop="15dip"
android:textStyle="bold"
android:textSize="10dip"
android:textColor="#ff0000" />
<TextView
android:id="@+id/nascitavar"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/nascita"
android:layout_marginLeft="35dip"
android:layout_marginTop="5dip"
android:textStyle="bold"
android:textSize="12dip"
android:textColor="#000" />


<TextView
android:id="@+id/numero"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentRight="true"
android:layout_below="@+id/puntivar"
android:layout_marginRight="30dip"
android:layout_marginTop="15dip"
android:textStyle="bold"
android:textSize="10dip"
android:textColor="#ff0000" />
<TextView
android:id="@+id/numerovar"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/numero"
android:layout_alignParentRight="true"
android:layout_marginRight="30dip"
android:layout_marginTop="5dip"
android:textStyle="bold"
android:textSize="12dip"
android:textColor="#000" />


<TextView
android:id="@+id/scadenza"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/nascitavar"
android:layout_marginLeft="35dip"
android:textStyle="bold"
android:layout_marginTop="15dp"
android:textSize="10dp"
android:textColor="#ff0000" />
<TextView
android:id="@+id/scadenzavar"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/scadenza"
android:textStyle="bold"
android:layout_marginLeft="35dp"
android:layout_marginTop="5dp"
android:textSize="12dp"
android:textColor="#000" />

<TextView
android:id="@+id/variazione"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/scadenzavar"
android:textStyle="bold"
android:layout_marginLeft="35dp"
android:layout_marginTop="30dp"
android:textSize="10dp"
android:text="Variazioni Punti"
android:textColor="#ff0000" />
<TextView
android:id="@+id/variazionevar"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/variazione"
android:textStyle="bold"
android:layout_marginLeft="35dp"
android:layout_marginTop="5dp"
android:textSize="12dp"
android:textColor="#000" />

<TextView
android:id="@+id/veicoli"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/variazionevar"
android:textStyle="bold"
android:layout_marginLeft="35dp"
android:layout_marginTop="20dp"
android:textSize="10dp"
android:text="Veicoli Posseduti"
android:textColor="#ff0000" />
<TextView
android:id="@+id/veicolivar"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/veicoli"
android:textStyle="bold"
android:layout_marginLeft="35dp"
android:layout_marginTop="5dp"
android:textSize="12dp"
android:textColor="#000" />

<TextView
android:id="@+id/aggiornamento"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
android:layout_marginBottom="20dp"
android:layout_marginLeft="30dp"
android:textSize="10dp"
android:text="@string/ultimo"
android:textStyle="bold"
android:textColor="#000" />
<TextView
android:id="@+id/data"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginLeft="150dp"
android:layout_alignParentBottom="true"
android:layout_marginBottom="20dp"
android:textSize="13dp"
android:textColor="#000" />
<Button
android:id="@+id/eventidettagli"
android:layout_width="70dp"
android:layout_height="30dp"
android:layout_below="@+id/variazione"
android:layout_marginLeft="170dp"
android:textSize="10dp"
android:textColor="#000"
android:text="Dettagli"
  />
<Button
android:id="@+id/veicolidettagli"
android:layout_width="70dp"
android:layout_height="30dp"
android:layout_below="@+id/veicoli"
android:layout_marginLeft="170dp"
android:textSize="10dp"
android:textColor="#000"
android:text="Dettagli" />
</RelativeLayout>