<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/widget28"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/background"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/usertext"
android:layout_width="wrap_content"
android:layout_height="fill_parent"
android:layout_toLeftOf="@+id/user"
android:textSize="20px"
android:textColor="#000"
android:layout_marginRight="8px"
android:layout_alignBaseline="@+id/user"
android:text="Nome Utente"
/>
<EditText
android:id="@+id/user"
android:layout_width="230px"
android:layout_height="80px"
android:layout_marginTop="50px"
android:layout_marginRight="60px"
android:layout_alignParentRight="true"
android:textSize="22px"
>
</EditText>
<TextView
android:id="@+id/pswdtext"
android:layout_width="wrap_content"
android:layout_height="fill_parent"
android:layout_toLeftOf="@+id/pswd"
android:textSize="20px"
android:textColor="#000"
android:layout_marginRight="8px"
android:layout_alignBaseline="@+id/pswd"
android:text="Password"
/>
<EditText
android:id="@+id/pswd"
android:layout_width="230px"
android:layout_height="80px"
android:layout_below="@+id/user"
android:layout_marginRight="60px"
android:layout_alignParentRight="true"
android:password="true"
android:textSize="22px"
>
</EditText>

<Button
android:id="@+id/login"
android:layout_width="180px"
android:layout_height="70px"
android:text="Login"
android:layout_below="@+id/pswd"
android:layout_centerHorizontal="true"
>
</Button>
<Button
android:id="@+id/register"
android:layout_width="180px"
android:layout_height="70px"
android:text="Registrati"
android:layout_below="@+id/login"
android:layout_centerHorizontal="true"
>
</Button>
<TextView
android:id="@+id/testo"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/register"
android:layout_marginLeft="28px"
android:layout_marginRight="13px"
android:layout_marginTop="20px"
android:textSize="20px"
android:textColor="#000"
android:text="Per poter utilizzare l'applicazione occorre essere registrati al sito &#34;Il Portale dell'automobilista&#34; e aver impostato il numero della propria patente nel profilo del sito."
>
</TextView>
<Button 
	android:layout_width="wrap_content" 
	android:layout_alignParentRight="true"
	android:layout_alignParentBottom="true"
	android:layout_height="wrap_content"
	android:layout_centerHorizontal="true"
	android:layout_marginBottom="16px"
	android:layout_marginRight="16px"
	android:id="@+id/About" android:maxWidth="500dip" android:maxLines="1" android:background="@android:color/transparent" android:text="About" android:textSize="15dip">
</Button>
	<TextView 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/version"
    android:id="@+id/version"
   	android:gravity="center"
	android:layout_alignParentBottom="true"
	android:layout_marginBottom="70px"
    android:textColor="#000"/>
</RelativeLayout>